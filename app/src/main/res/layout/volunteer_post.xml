<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginBottom="15dp"
    android:background="@drawable/custom_border_black"
    android:padding="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_border_white">

        <ImageView
            android:id="@+id/post_image"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:contentDescription="image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/backgrounds/scenic" />

        <TextView
            android:id="@+id/post_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:focusable="false"
            android:textColor="#0C0909"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/post_image" />

        <EditText
            android:id="@+id/post_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:autofillHints=""
            android:ems="10"
            android:enabled="false"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:textColor="#FF0C0909"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/post_time_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/post_title" />

        <TextView
            android:id="@+id/post_time_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:focusable="false"
            android:text="Time:"
            android:textColor="#FF0C0909"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/post_time_value"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/post_description" />

        <EditText
            android:id="@+id/post_time_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:ems="5"
            android:enabled="false"
            android:inputType="date"
            android:textColor="#FF0C0909"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/post_time_title"
            app:layout_constraintTop_toBottomOf="@+id/post_description" />

        <TextView
            android:id="@+id/post_location_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:focusable="false"
            android:text="Location:"
            android:textColor="#FF0C0909"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/post_location_value"
            app:layout_constraintStart_toEndOf="@+id/post_time_value"
            app:layout_constraintTop_toBottomOf="@+id/post_description"/>

        <EditText
            android:id="@+id/post_location_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:ems="5"
            android:enabled="false"
            android:inputType="text"
            android:textColor="#FF0C0909"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/post_location_title"
            app:layout_constraintTop_toBottomOf="@+id/post_description" />

        <TextView
            android:id="@+id/post_type_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:focusable="false"
            android:text="Type:"
            android:textColor="#FF0C0909"
            app:layout_constraintBottom_toBottomOf="@+id/post_type_value"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/post_time_value" />

        <EditText
            android:id="@+id/post_type_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:ems="5"
            android:enabled="false"
            android:inputType="text"
            android:textColor="#FF0C0909"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/post_type_title"
            app:layout_constraintTop_toBottomOf="@+id/post_time_value" />

        <TextView
            android:id="@+id/post_needs_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:focusable="false"
            android:text="Special Needs:"
            android:textColor="#FF0C0909"
            app:layout_constraintBottom_toBottomOf="@+id/post_needs_value"
            app:layout_constraintStart_toEndOf="@+id/post_type_value"
            app:layout_constraintTop_toBottomOf="@+id/post_location_value" />

        <EditText
            android:id="@+id/post_needs_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:ems="5"
            android:enabled="false"
            android:inputType="text"
            android:textColor="#FF0C0909"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/post_needs_title"
            app:layout_constraintTop_toBottomOf="@+id/post_location_value" />

        <TextView
            android:id="@+id/post_author_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:focusable="false"
            android:text="Author:"
            android:textColor="#FF0C0909"
            app:layout_constraintBottom_toBottomOf="@+id/post_author_value"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/post_type_value" />

        <EditText
            android:id="@+id/post_author_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:ems="5"
            android:enabled="false"
            android:inputType="text"
            android:textColor="#FF0C0909"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/post_author_title"
            app:layout_constraintTop_toBottomOf="@+id/post_type_value" />

        <Button
            android:id="@+id/post_subscribe_btn"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            android:scrollbarSize="0dp"
            android:text="subscribe"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:textStyle="bold"
            app:backgroundTint="#7E7777"
            app:iconPadding="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/post_author_value"
            app:rippleColor="#FFFFFF" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="20dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>